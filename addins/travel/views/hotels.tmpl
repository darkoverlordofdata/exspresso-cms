{% block title %}{% parent %} | Travel {% endblock %}

{% block content %}

<div>
    <h2>Hotel Results</h2>
    <div class="row">
        <table class="table table-striped table-hover table-condensed">
            <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City, State</th>
                <th>Zip</th>
            </tr>
            </thead>
            <tbody>

            {%- set url = "/travel/hotel/%s" -%}

            {%- for hotel in hotels %}
            <tr>
                <td>{% anchor url|printf(hotel.id) hotel.name %}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.city }}, {{ hotel.state }}</td>
                <td>{{ hotel.zip }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="span4">
            {% anchor "/travel" 'Change Search' "class='btn btn-primary'" %}
        </div>
    </div>
</div>
{% paginate %}

{% endblock %}
