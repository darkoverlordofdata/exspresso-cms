{% block title %}{% parent %} | Katra {% endblock %}

{% block content %}

<div class="jumbotron">
    <h3>Katras</h3>
    <p class="row">
        <div class="span12">
            <table class="table table striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Updated</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for doc in docs %}
                <tr>
                    <td>{{ doc.id }}</td>
                    <td>{% anchor "katra/run/#{doc.id}" doc.title %}</td>
                    <td>{{ doc.author }}</td>
                    <td>{{ doc.status }}</td>
                    <td>{{ doc.created_on|date('M d Y') %}</td>
                    <td>{{ doc.updated_on|date('M d Y') %}</td>
                    {% if user.isLoggedIn %}
                    <td>{% anchor "katra/edit/#{doc.id}" 'Edit' %}</td>
                    <td>{% anchor "katra/del/#{doc.id}" 'Delete' %}</td>
                    {% endif %}
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </p>
    <div class="row">
        <div class="span1 pull-right">
            {% if user.isLoggedIn %}
            <p>{% anchor "katra/create" "New" "class='btn-primary btn'" %}</p>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
